<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Csoport neve" />

    <EditText
        android:id="@+id/editTextUserId1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Felhasználó ID 1" />

    <EditText
        android:id="@+id/editTextUserId2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Felhasználó ID 2" />

    <Button
        android:id="@+id/buttonCreateGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Csoport létrehozása" />
</LinearLayout>
